<%= link_to("<< Back to List", books_index_path, :class => 'back-link') %>

<div class="books new">
  <h2>Create Book</h2>

  <%= form_for(@book) do |f| %>

    <table summary="Book form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= f.select :genre, [['fiction', 'fiction'], ['nonfiction', 'nonfiction'], ['SciFi', 'SciFi'], ['Action/Adventure', 'action/adventure'], ['romance', 'romance'], ['history', 'history']] %></td>
      </tr>
	  <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
	  <tr>
        <th>Publish Date</th>
        <td><%= f.select :publishDate, [['2000', '2000'], ['2001', '2001'], ['2002', '2002'], ['2003', '2003'],
				['2004', '2004'], ['2005', '2005'], ['2006', '2006'], ['2007', '2007'], ['2008', '2008'],
				['2009', '2009'], ['2010', '2010'], ['2011', '2011'], ['2012', '2012'], ['2013', '2013'],
				['2014', '2014'], ['2015', '2015'], ['2016', '2016'], ['2017', '2017'], ['2018', '2018'],
				['2019', '2019'], ['2020', '2020'], ['2021', '2021']]%></td>
				
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Book") %>
    </div>

  <% end %>
</div>
